@using ProniaSimulaiton.ViewModels.Auth
@model LoginVM
<form asp-action="Login" asp-controller="Auth">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="login-form">
        <h4 class="login-title">Login</h4>
        <div class="row">
            <input type="hidden" name="ReturnUrl"  value="@Context.Request.Query["ReturnUrl"]" />

            <div class="col-lg-12">
                <label>Email Address*</label>
                <input type="email" asp-for="Email" placeholder="Email Address" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="col-lg-12">
                <label>Password</label>
                <input type="password" asp-for="Password" placeholder="Password" />
                <span class="text-danger"  asp-validation-for="Password"></span>

            </div>
            <div class="col-md-8">
                <div class="check-box">
                    <input type="checkbox" id="remember_me" />
                    <label for="remember_me">Remember me</label>
                </div>
            </div>
            <div class="col-md-4 pt-1 mt-md-0">
                <div class="forgotton-password_info">
                    <a href="#"> Forgotten pasward?</a>
                </div>
            </div>
            <div class="col-lg-12 pt-5">
                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                    Login
                </button>
            </div>
        </div>
    </div>
</form>